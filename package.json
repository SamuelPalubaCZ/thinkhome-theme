{
  "name": "thinkhome-theme",
  "description": "A terminal-inspired Ghost theme with flat design, monospace typography, and sharp geometry",
  "demo": "https://github.com/SamuelPalubaCZ/thinkhome-theme",
  "version": "1.0.0",
  "engines": {
    "ghost": ">=6.0.0",
    "node": ">=22.0.0"
  },
  "license": "MIT",
  "screenshots": {
    "desktop": "assets/screenshot-desktop.jpg"
  },
  "scripts": {
    "dev": "rollup -c --watch",
    "build": "rollup -c",
    "test": "gscan ."
  },
  "author": {
    "name": "Samuel",
    "email": "samuel@thinkhome.dev",
    "url": "https://thinkhome.dev"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Developer",
      "Terminal"
    ]
  },
  "keywords": [
    "ghost",
    "ghost-theme",
    "theme",
    "terminal",
    "monospace",
    "flat",
    "minimal",
    "developer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SamuelPalubaCZ/thinkhome-theme.git"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "15.2.3",
    "autoprefixer": "10.4.16",
    "cssnano": "6.0.1",
    "gscan": "4.43.1",
    "postcss": "8.4.32",
    "rollup": "4.9.1",
    "rollup-plugin-livereload": "2.0.5",
    "rollup-plugin-postcss": "4.0.2"
  },
  "browserslist": [
    "defaults"
  ],
  "config": {
    "posts_per_page": 25,
    "image_sizes": {
      "xs": {
        "width": 150
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "card_assets": true,
    "custom": {
      "color_scheme": {
        "type": "select",
        "options": [
          "Dark (Black background)",
          "Light (White background)"
        ],
        "default": "Dark (Black background)"
      },
      "accent_color": {
        "type": "color",
        "default": "#00FF00",
        "description": "Terminal accent color for highlights"
      },
      "show_cursor": {
        "type": "boolean",
        "default": true,
        "description": "Show blinking cursor animation"
      },
      "font_size": {
        "type": "select",
        "options": [
          "Small (14px)",
          "Medium (16px)",
          "Large (18px)"
        ],
        "default": "Medium (16px)"
      }
    }
  }
}
