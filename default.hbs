<!DOCTYPE html>
<html lang="{{@site.locale}}"{{#if @custom.color_scheme}} class="light-mode"{{else}} class="dark-mode"{{/if}}>
<head>
    {{!-- Document Settings --}}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    {{!-- Page Meta --}}
    <title>{{meta_title}}</title>
    
    {{!-- Theme Styles --}}
    <link rel="stylesheet" type="text/css" href="{{asset "css/index.css"}}" />
    
    {{!-- Preload Fonts --}}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500&display=swap" rel="stylesheet">
    
    {{!-- Custom CSS Variables --}}
    <style>
        :root {
            --accent-color: {{@custom.accent_color}};
            --base-font-size: 16px;
        }
    </style>
    
    {{!-- Ghost outputs SEO meta, structured data, and other important tags --}}
    {{{ghost_head}}}
</head>

<body class="{{body_class}}{{#if @custom.show_cursor}} cursor-enabled{{/if}}">
    <div class="site-wrapper">
        
        {{!-- Site Header --}}
        {{> header}}
        
        {{!-- Main Content Area --}}
        <main class="site-main" role="main">
            {{{body}}}
        </main>
        
        {{!-- Site Footer --}}
        {{> footer}}
        
        {{!-- Search Overlay --}}
        <div class="search-overlay">
            <div class="search-container">
                <div class="search-header">
                    <span class="search-prompt">search:</span>
                    <button class="search-close" aria-label="Close search">[x]</button>
                </div>
                <input type="text" class="search-input" placeholder="type to search..." data-ghost-search>
                <div class="search-results"></div>
            </div>
        </div>
        
    </div>
    
    {{!-- Theme JavaScript --}}
    <script src="{{asset "js/index.js"}}"></script>
    
    {{!-- Block for additional scripts from other templates --}}
    {{{block "scripts"}}}
    
    {{!-- Ghost outputs important scripts and data - always last --}}
    {{{ghost_foot}}}
</body>
</html>
